<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <TextView
        android:id="@+id/titleLabel"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/amaranth"
        android:lineSpacingExtra="8sp"
        android:text="Hemo POC\n检测报告单"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="40sp" />

    <View
        android:id="@+id/black_line"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_below="@+id/titleLabel"
        android:layout_marginTop="-15dp"
        android:background="#000000"></View>

    <TextView
        android:id="@+id/IDLabel_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/black_line"
        android:layout_marginStart="60dp"
        android:layout_marginTop="18dp"
        android:fontFamily="serif"
        android:lineSpacingExtra="8sp"
        android:text="病人ID："
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/IDLabel"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/black_line"
        android:layout_alignLeft="@+id/IDLabel_title"
        android:layout_marginLeft="165dp"
        android:layout_marginTop="18dp"
        android:background="@null"
        android:fontFamily="serif"
        android:inputType="number"
        android:lineSpacingExtra="8sp"
        android:saveEnabled="false"
        android:text="100010000"
        android:textAlignment="textStart"
        android:textColor="@color/colorAccent"
        android:textSize="40sp" />

    <View
        android:id="@+id/black_line2"
        android:layout_width="295dp"
        android:layout_height="2dp"
        android:layout_below="@+id/IDLabel"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="-10dp"
        android:background="#000000"></View>

    <TextView
        android:id="@+id/patientNameLabel_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/IDLabel"
        android:layout_marginStart="60dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="5dp"
        android:fontFamily="serif"
        android:lineSpacingExtra="8sp"
        android:text="姓名："
        android:textAlignment="viewStart"
        android:textColor="@color/colorAccent"
        android:textSize="40sp" />

    <EditText
        android:id="@+id/patientNameLabel"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/IDLabel"
        android:layout_alignLeft="@+id/patientNameLabel_title"
        android:layout_marginLeft="115dp"
        android:layout_marginTop="18dp"
        android:background="@null"
        android:fontFamily="serif"
        android:lineSpacingExtra="8sp"
        android:saveEnabled="false"
        android:text="李小强"
        android:textAlignment="viewStart"
        android:textColor="@color/colorAccent"
        android:textSize="40sp" />

    <View
        android:id="@+id/black_line3"
        android:layout_width="345dp"
        android:layout_height="2dp"
        android:layout_below="@+id/patientNameLabel"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="-10dp"
        android:background="#000000"></View>

    <TextView
        android:id="@+id/testIDLabel_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/patientNameLabel"
        android:layout_marginStart="60dp"
        android:layout_marginTop="18dp"
        android:fontFamily="serif"
        android:lineSpacingExtra="8sp"
        android:text="检测序号："
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/testIDLabel"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/patientNameLabel"
        android:layout_alignLeft="@+id/testIDLabel_title"
        android:layout_marginLeft="195dp"
        android:layout_marginTop="18dp"
        android:background="@null"
        android:fontFamily="serif"
        android:inputType="number"
        android:lineSpacingExtra="8sp"
        android:saveEnabled="false"
        android:text="00070"
        android:textAlignment="textStart"
        android:textColor="@color/colorAccent"
        android:textSize="40sp" />

    <View
        android:id="@+id/black_line4"
        android:layout_width="265dp"
        android:layout_height="2dp"
        android:layout_below="@+id/testIDLabel"
        android:layout_marginLeft="248dp"
        android:layout_marginTop="-10dp"
        android:background="#000000"></View>

    <TextView
        android:id="@+id/resultLabel_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/testIDLabel"
        android:layout_marginStart="60dp"
        android:layout_marginTop="18dp"
        android:fontFamily="sans-serif-smallcaps"
        android:lineSpacingExtra="8sp"
        android:text="INR："
        android:textAlignment="textStart"
        android:textColor="@color/colorAccent"
        android:textSize="80sp" />

    <TextView
        android:id="@+id/resultLabel"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/testIDLabel"
        android:layout_alignLeft="@+id/resultLabel_title"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="18dp"
        android:background="@null"
        android:fontFamily="sans-serif-smallcaps"
        android:inputType="number"
        android:lineSpacingExtra="8sp"
        android:saveEnabled="false"
        android:text="1.0"
        android:textAlignment="textStart"
        android:textColor="@color/colorAccent"
        android:textSize="80sp" />

    <TextView
        android:id="@+id/ptLabel_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/resultLabel"
        android:layout_marginStart="60dp"
        android:layout_marginTop="-10dp"
        android:fontFamily="sans-serif-smallcaps"
        android:lineSpacingExtra="8sp"
        android:text="PT："
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="80sp" />

    <TextView
        android:id="@+id/ptLabel"
        android:layout_width="303dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/resultLabel"
        android:layout_alignLeft="@+id/ptLabel_title"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="-10dp"
        android:background="@null"
        android:fontFamily="sans-serif-smallcaps"
        android:inputType="number"
        android:lineSpacingExtra="8sp"
        android:saveEnabled="false"
        android:text="1.0"
        android:textAlignment="textStart"
        android:textColor="@color/colorAccent"
        android:textSize="80sp" />




    <TextView
        android:id="@+id/checkDateLabel_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ptLabel"
        android:layout_marginStart="60dp"
        android:layout_marginTop="18dp"
        android:fontFamily="serif"
        android:lineSpacingExtra="8sp"
        android:text="检测日期："
        android:textAlignment="textStart"
        android:textColor="@color/colorAccent"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/checkDateLabel"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ptLabel"
        android:layout_alignLeft="@+id/checkDateLabel_title"
        android:layout_marginLeft="205dp"
        android:layout_marginTop="18dp"
        android:background="@null"
        android:fontFamily="serif"
        android:inputType="date"
        android:lineSpacingExtra="8sp"
        android:saveEnabled="false"
        android:text="20190407"
        android:textAlignment="textStart"
        android:textColor="@color/colorAccent"
        android:textSize="40sp" />

    <View
        android:id="@+id/black_line6"
        android:layout_width="260dp"
        android:layout_height="2dp"
        android:layout_below="@+id/checkDateLabel"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="-10dp"
        android:background="#000000"></View>

    <TextView
        android:id="@+id/testTimeLabel_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkDateLabel"
        android:layout_marginStart="60dp"
        android:layout_marginTop="18dp"
        android:fontFamily="serif"
        android:lineSpacingExtra="8sp"
        android:text="检测时间："
        android:textAlignment="textStart"
        android:textColor="@color/colorAccent"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/testTimeLabel"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkDateLabel"
        android:layout_alignLeft="@+id/checkDateLabel_title"
        android:layout_marginLeft="205dp"
        android:layout_marginTop="18dp"
        android:background="@null"
        android:fontFamily="serif"
        android:inputType="date"
        android:lineSpacingExtra="8sp"
        android:saveEnabled="false"
        android:text="16:52:42"
        android:textAlignment="textStart"
        android:textColor="@color/colorAccent"
        android:textSize="40sp" />

    <View
        android:id="@+id/black_line7"
        android:layout_width="260dp"
        android:layout_height="2dp"
        android:layout_below="@+id/testTimeLabel"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="-10dp"
        android:background="#000000"></View>

    <TextView
        android:id="@+id/reportDateLabel_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/testTimeLabel"
        android:layout_marginStart="60dp"
        android:layout_marginTop="18dp"
        android:fontFamily="serif"
        android:lineSpacingExtra="8sp"
        android:text="报告日期："
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/reportDateLabel"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/testTimeLabel"
        android:layout_alignLeft="@+id/reportDateLabel_title"
        android:layout_marginLeft="205dp"
        android:layout_marginTop="18dp"
        android:background="@null"
        android:fontFamily="serif"
        android:inputType="datetime"
        android:lineSpacingExtra="8sp"
        android:saveEnabled="false"
        android:text="20190407"
        android:textAlignment="textStart"
        android:textColor="@color/colorAccent"
        android:textSize="40sp" />

    <View
        android:id="@+id/black_line8"
        android:layout_width="260dp"
        android:layout_height="2dp"
        android:layout_below="@+id/reportDateLabel"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="-10dp"
        android:background="#000000"></View>

    <TextView
        android:id="@+id/doctorNameLabel_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reportDateLabel"
        android:layout_marginStart="60dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="5dp"
        android:fontFamily="serif"
        android:lineSpacingExtra="8sp"
        android:text="报告医生："
        android:textAlignment="textStart"
        android:textColor="@color/colorAccent"
        android:textSize="40sp" />

    <EditText
        android:id="@+id/doctorNameLabel"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reportDateLabel"
        android:layout_alignLeft="@+id/doctorNameLabel_title"
        android:layout_marginLeft="205dp"
        android:layout_marginTop="18dp"
        android:background="@null"
        android:fontFamily="serif"
        android:lineSpacingExtra="8sp"
        android:saveEnabled="false"
        android:text="贾医生"
        android:textAlignment="textStart"
        android:textColor="@color/colorAccent"
        android:textSize="40sp" />

    <View
        android:id="@+id/black_line9"
        android:layout_width="260dp"
        android:layout_height="2dp"
        android:layout_below="@+id/doctorNameLabel"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="-10dp"
        android:background="#000000"></View>

</RelativeLayout>