<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Frame.PrintPage"
    android:focusable="true"
    android:focusableInTouchMode="true" >

    <RelativeLayout
        android:id="@+id/root_view"
        android:layout_width="match_parent"
        android:layout_height="549dp">

        <EditText
            android:id="@+id/printTitleLabel"
            android:layout_width="match_parent"
            android:layout_height="87dp"
            android:layout_marginEnd="3dp"
            android:lineSpacingExtra="8sp"
            android:text="岭南医院INR检测报告单"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="30sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/printIDLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/printTitleLabel"
            android:layout_marginTop="1dp"
            android:lineSpacingExtra="8sp"
            android:text="ID:10000"
            android:textAlignment="center"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/printPatientNameLabel"
            android:layout_width="406dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/printIDLabel"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:lineSpacingExtra="8sp"
            android:text="姓名：李木匠"
            android:textAlignment="center"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/printResultLabel"
            android:layout_width="406dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/printPatientNameLabel"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="5dp"
            android:lineSpacingExtra="8sp"
            android:text="INR: 1"
            android:textAlignment="center"
            android:textSize="36sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/printDoctorNameLabel"
            android:layout_width="406dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/printResultLabel"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="5dp"
            android:lineSpacingExtra="8sp"
            android:text="报告医生：贾医生"
            android:textAlignment="center"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/printCheckDateLabel"
            android:layout_width="406dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/printDoctorNameLabel"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="5dp"
            android:lineSpacingExtra="8sp"
            android:text="检测日期：20190407"
            android:textAlignment="center"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/printReportDateLabel"
            android:layout_width="406dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/printCheckDateLabel"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="5dp"
            android:lineSpacingExtra="8sp"
            android:text="报告日期：20190407"
            android:textAlignment="center"
            android:textSize="30sp" />

    </RelativeLayout>

    <Button
        android:id="@+id/load_devices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/root_view"
        android:layout_marginTop="-35dp"
        android:text="刷新usb列表" />

    <Button
        android:id="@+id/testPrintBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/load_devices"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="-12dp"
        android:text="测试打印" />

</RelativeLayout>